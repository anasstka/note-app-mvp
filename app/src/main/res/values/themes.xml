<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NoteAppMvp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@android:color/white</item>
        <item name="background">@color/dark_gray</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@color/light_blue</item>
        <item name="colorOnSurface">@color/dark_gray</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.NoteAppMvp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NoteAppMvp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NoteAppMvp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>